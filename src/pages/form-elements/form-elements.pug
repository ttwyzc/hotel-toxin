extends ../base-min/base-min
include ../../components/datepicker/datepicker
include ../../components/dropdown/dropdown

block content
  -
    const bulletItems = [
      'Нельзя с питомцами',
      'Без вечеринок и мероприятий',
      'Время прибытия — после 13:00, а выезд до 12:00',
    ]
    const emotionsListUikit = [{icon: 'insert_emoticon',title: 'Комфорт',text: 'Шумопоглощающие стены'}, {icon: 'location_city',title: 'Удобство',text: 'Окно в каждой из спален'}]

    const checkboxItems = [{title: 'Можно курить'}, {title: 'Можно с питомцами', isChecked: true}, {title: 'Можно пригласить гостей (до 10 человек)', isChecked: true}]

    const richCheckboxItems = [{title: 'Широкий коридор', text: 'Ширина коридоров в номере не менее 91 см.'}, {title: 'Помощник для инвалидов', text: 'На 1 этаже вас встретит специалист  и проводит до номера.'}]

  +header({"mode": 'min'})
  .wrapper
    .wrapper__content
      .form-elems
        .form-elems__column
          .form-elems__input-text
            +input({type: 'text', title: 'text field', placeholder: 'Email'})
            +input({type: 'text', title: 'text field', placeholder: 'This is pretty awesome'})
            +input({type: 'dropdown', title: 'Dropdown', placeholder: 'Сколько гостей'})
            +input({type: 'text', title: 'Masked text field', placeholder: 'ДД.ММ.ГГ', mask: '00.00.0000'})
          .form-elems__datepicker-filter
            +datepicker({type: 'dropdown'})
          .form-elems__datepicker-filter
            +datepicker({type: 'filter'})

          .form-elems__dropdown
            +dropdown()
          .form-elems__buttons
            +button({
              theme: 'cover',
              text: 'click me',
              isLink: false,
              size: 'medium'
              })
            +button({
              theme: 'cover',
              text: 'click me',
              isLink: false,
              size: 'medium'
              })
            +button({
              theme: 'border',
              text: 'click me',
              isLink: false,
              size: 'medium'
              })
            +button({
              theme: 'border',
              text: 'click me',
              isLink: false,
              size: 'medium'
              })
            +button({
              theme: 'text',
              text: 'click me',
              color: 'purple',
              isLink: true
              })
            +button({
              theme: 'text',
              text: 'click me',
              color: 'grey',
              isLink: true
              })
            +button({
              theme: 'cover',
              text: 'click me',
              isLink: false,
              size: 'big',
              arrow: true,
              arrowColor: 'white'
              })
          .form-elems__bullets
            +bullet-list({items: bulletItems})
          .form-elems__radio-group
            +input({type: 'radio', id: 'women', name: 'gender', label: 'Мужчина', isChecked: true})
            +input({type: 'radio', id: 'men', name: 'gender', label: 'Женщина'})
          .form-elems__toggle-group
            +input({type: 'toggle', label: 'Подписаться на новости'})
            +input({type: 'toggle', label: 'Подписаться на новости', isChecked: true})
          .form-elems__likes
            +like({count: 2})
            +like({count: 12, isChecked: true})
          .form-elems__checkbox
            +checkbox({items: checkboxItems})
          .form-elems__comment
            +comment({photo: 'photo-1', isLiked: true, likes: 12, name: 'Мурад Сарафанов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
          .form-elems__rich-textbox
            +checkbox({items: richCheckboxItems, isRich: true})
          .form-elems__star-rating
            +star-rating({count: 4})
            +star-rating({count: 5})
          .form-elems__expandable
            +expandable({title: 'expandable checkbox list'})
              +checkbox({items: checkboxItems})
          .form-elems__emotions
            +emotion-cards({emotions: emotionsListUikit})
