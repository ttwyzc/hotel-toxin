include ../radio-button/radio-button

mixin input(prop = {})
  - const {title='title', placeholder='placeholder', type='text'} = prop;

  .input
    if type === 'text' || type === 'password' || type === 'email'
      if title
        label.input__title()
          h3 #{title}
          input.input(class='input__elem ' placeholder=placeholder type='text')
      else
        input.input(class='input__elem' type='text' placeholder=placeholder)

    if type === 'dropdown'
      | pass

    if type === 'radio'
      +radio-button(prop)
