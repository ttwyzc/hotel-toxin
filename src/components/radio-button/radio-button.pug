//-
  id - уникальный идентификатор ('string')
  name - имя для связи с другими radio-buttons ('string')
  label - label кнопки ('string')
  isChecked - статус checked (true, false)


  +input({
    type: 'radio',
    id: 'women',
    name: 'gender',
    label: 'Мужчина',
    isChecked: true
    })


mixin radio-button(props = {})
  - const {id='id', name='name', label='radio', isChecked=false} = props;

  .radio__radio-group
    input.radio__radio-input(type='radio' name=name id=id checked=isChecked)
    label.radio__radio-label(for=id) #{label}
      span.radio__radio-button

